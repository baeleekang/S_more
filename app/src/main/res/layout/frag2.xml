    // 각각의 버튼 클릭시 화면 전환
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorfrag2_background">

        // 기본적으로 LinearLayout, 시간표 일정 출력
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/notice">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@color/colorfrag2"
                android:layout_marginTop="10dp">
                <ImageButton
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:scaleType="fitCenter"
                    android:background="#00FFFFFF"
                    android:src="@drawable/smoreicon"/>
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/noticeListView"
                android:layout_margin="10dp"
                android:dividerHeight="10dp"
                android:divider="@color/colorfrag2_background"></ListView>

        </LinearLayout>

        // 버튼 클릭 시 LinearLayout 삭제, RelativeLayout 보임, button 클릭시 Frag 출력
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment">

        </RelativeLayout>
    </FrameLayout>

</LinearLayout>